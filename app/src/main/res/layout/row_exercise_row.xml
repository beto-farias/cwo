<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/img_exercise_thumnail"
        android:layout_width="0dp"
        android:layout_height="@dimen/img_thumnail"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/estiramientos_1_2x" />

    <TextView
        android:id="@+id/txt_exercise_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Nombre del ejercicio"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_sm"
        app:layout_constraintStart_toStartOf="@+id/img_exercise_thumnail"
        app:layout_constraintTop_toTopOf="@+id/img_exercise_thumnail" />

    <TextView
        android:id="@+id/txt_exercise_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="01 enero 2018"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/img_exercise_thumnail"
        app:layout_constraintTop_toBottomOf="@+id/txt_exercise_name" />
</android.support.constraint.ConstraintLayout>