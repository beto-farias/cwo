<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="cwo.pakidermo.dgom.com.mx.cwo.ViewVideoActivity">

    <VideoView
        android:id="@+id/video_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_video_time_remaning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_md"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layout_controls"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_brillante"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="@dimen/logo_size"
            android:layout_height="@dimen/logo_size"
            android:src="@drawable/logo_light_2x"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <ImageView
        android:id="@+id/img_video_control"
        android:layout_width="@dimen/ico_size"
        android:layout_height="@dimen/ico_size"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="24dp"
        android:elevation="4dp"
        android:onClick="pauseAction"
        android:src="@drawable/icon_pause_2x"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_reanudar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/control_resume"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/img_video_control"
        app:layout_constraintTop_toTopOf="@+id/img_video_control" />

    <ImageView
        android:id="@+id/img_video_control_restart"
        android:layout_width="@dimen/ico_size"
        android:layout_height="@dimen/ico_size"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"
        android:onClick="restartAction"
        android:src="@drawable/icon_restart_2x"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_video_control" />

    <TextView
        android:id="@+id/txt_restart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/control_restart"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/img_video_control_restart"
        app:layout_constraintTop_toTopOf="@+id/img_video_control_restart" />

    <ImageView
        android:id="@+id/img_video_control_stop"
        android:layout_width="@dimen/ico_size"
        android:layout_height="@dimen/ico_size"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"
        android:onClick="stopAction"
        android:src="@drawable/icon_stop_2x"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_video_control_restart" />

    <TextView
        android:id="@+id/txt_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/control_stop"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/img_video_control_stop"
        app:layout_constraintTop_toTopOf="@+id/img_video_control_stop" />

    <ImageView
        android:id="@+id/img_goto_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:onClick="moveEndAction"
        android:src="@drawable/icon_stop_2x"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_video_control_stop" />

</android.support.constraint.ConstraintLayout>
