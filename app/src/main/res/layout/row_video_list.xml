<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/padding_xs"
    android:background="@android:color/white"
    android:elevation="@dimen/cardview_default_elevation">

    <ImageView
        android:id="@+id/img_thumnail"
        android:layout_width="0dp"
        android:layout_height="@dimen/img_exercise_thumnail"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_video_placeholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_video_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/lbl_lit_video"
        android:textColor="@color/text_color"
        android:textSize="@dimen/table_cell_title"
        app:layout_constraintEnd_toEndOf="@+id/img_thumnail"
        app:layout_constraintTop_toBottomOf="@+id/img_thumnail" />

    <TextView
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/lbl_video_tiempo"
        android:textColor="@color/bg_blue"
        android:textSize="@dimen/table_cell_sub_title"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/img_thumnail"
        app:layout_constraintTop_toBottomOf="@+id/txt_video_title" />

    <ImageView
        android:id="@+id/img_trash"
        android:layout_width="@dimen/ico_size_m"
        android:layout_height="@dimen/ico_size_m"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/icon_trash"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_thumnail"
        app:srcCompat="@drawable/icon_trash" />

    <ImageView
        android:id="@+id/img_download"
        android:layout_width="@dimen/ico_size_m"
        android:layout_height="@dimen/ico_size_m"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ico_download"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_thumnail"
        app:srcCompat="@drawable/ico_download" />

    <ImageView
        android:id="@+id/img_lock"
        android:layout_width="@dimen/ico_size_m"
        android:layout_height="@dimen/ico_size_m"

        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ico_lock"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/img_thumnail"

        app:srcCompat="@drawable/ico_lock" />

    <ProgressBar
        android:id="@+id/progress_download"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="@+id/img_thumnail"
        app:layout_constraintStart_toStartOf="@+id/img_thumnail"
        app:layout_constraintTop_toBottomOf="@+id/img_thumnail" />
</android.support.constraint.ConstraintLayout>